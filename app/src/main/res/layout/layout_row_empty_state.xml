<?xml version="1.0" encoding="utf-8"?>
<layout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/llEmptyStateLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivEmptyStateIcon"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/ic_bookmark_filled"/>

        <TextView
            android:id="@+id/tvEmptyStateTitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title to add"
            android:textSize="@dimen/text_size_normal"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tvEmptyStateDescriptionTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Content to be added"
            android:textSize="@dimen/text_size_small"/>

    </LinearLayout>
</layout>